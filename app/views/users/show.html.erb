<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>Gender:</b>
  <%= @user.gender %>
</p>

<p>
  <b>Facebook ID:</b>
  <%= @user.facebook_id %>
</p>

<p>
  <b>Birthday:</b>
  <%= @user.birthday %>
</p>


<p>
  <b>Friends:</b>
  <%= @user.friends.map{|f| f.name}.join(", ") %>
